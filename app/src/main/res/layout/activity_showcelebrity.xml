<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/celebrityyou"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".ShowcelebrityActivity">

    <android.widget.Button
        android:id="@+id/button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/arrow"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="1dp">

        <TextView
            android:id="@+id/you_look_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="คุณหน้าคล้ายกับ ..."
            android:layout_marginRight="40dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000" />


        <TextView
            android:id="@+id/celebrity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="นาย ณภัทร"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/similarity_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 %"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="#FF245B"
            android:layout_marginTop="10dp" />

    </LinearLayout>



    <RelativeLayout
        android:id="@+id/celebrity"
        android:layout_width="250dp"
        android:layout_height="230dp"
        android:layout_gravity="center"
        android:background="@drawable/image_border"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imageViewmy"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <android.widget.Button
            android:id="@+id/deny_button"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_gravity="start"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/brown"
            android:textStyle="bold"
            android:text="ย้อนกลับ"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <android.widget.Button
            android:id="@+id/allow_button"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginEnd="1dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/pink1"
            android:text="อัพโหลดรูปใหม่"
            android:textStyle="bold"
            android:textSize="12dp" />

    </RelativeLayout>

</LinearLayout>