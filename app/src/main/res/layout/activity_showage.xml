<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/showage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#ffe5ec"
    tools:context=".ShowageActivity">

    <!-- Back Button -->
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="start"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/arrow" />

    <!-- Age TextView -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="อายุของคุณ ..."
        android:textColor="#000000"
        android:textSize="22sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />

    <!-- Age Display -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="40 ปี"
        android:textColor="#FF005A"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <!-- User Image -->
    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:background="@drawable/image_border"
        android:gravity="center">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:src="@drawable/user"
        android:clickable="true"
        android:focusable="true" />
    </RelativeLayout>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal">

        <!-- Back Button -->
        <android.widget.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ย้อนกลับ"
            android:textColor="#FFFFFF"
            android:backgroundTint="#9C6876"
            android:padding="10dp"
            android:layout_marginEnd="20dp" />

        <!-- Upload New Image Button -->
        <android.widget.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="อัพโหลดรูปใหม่"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF6F91"
            android:padding="10dp" />
    </LinearLayout>

</LinearLayout>
